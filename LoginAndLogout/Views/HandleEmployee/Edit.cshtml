@model LoginAndLogout.Models.Employee

<h1 class="text-center">Edit Employee Details</h1>
@{
    if (Model is null)
    {
        <p class="text-center">No employee is found</p>
    }
    else
    {
        <form method="post">
            <div class="mt-3">
                <label class="form-label fw-bold">Id</label>
                <input type="text" class="form-control" asp-for="Id" />
            </div>
            <div class="mt-3">
                <label class="form-label fw-bold">Name</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <div class="mt-3">
                <label class="form-label fw-bold">Email</label>
                <input type="text" class="form-control" asp-for="Email" />
            </div>
            <div class="mt-3">
                <input type="checkbox" class="form-check-input" id="Present" asp-for="Present" />
                <label class="form-check-label fw-bold" for="Present">Present</label>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    }
}

