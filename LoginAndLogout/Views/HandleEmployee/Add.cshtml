@{
}

@model LoginAndLogout.Models.EmployeeViewModel
<h1 class="text-center">Employee Registration</h1>

@Html.ValidationSummary("",new {@class = "text-danger"})
<form method="post">
    <div class="mt-3">
        <label class="form-label fw-bold">Name</label>@ViewBag.Error1
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label fw-bold">Email</label>@ViewBag.Error2
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label fw-bold">Password</label>@ViewBag.Error3
        <input type="password" class="form-control" asp-for="Password" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Present" asp-for="Present" />
        <label class="form-check-label fw-bold" for="Present">Present</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>